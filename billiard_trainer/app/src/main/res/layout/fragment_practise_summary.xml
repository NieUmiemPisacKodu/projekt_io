<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentPractiseSummary">

    <TextView
        android:id="@+id/textSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/summary"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_practise"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="120dp"
        android:background="?android:attr/listDivider"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 1"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/divider2"
        app:layout_constraintBottom_toBottomOf="@id/divider3"
        />

    <TextView
        android:id="@+id/textScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/divider2"
        app:layout_constraintBottom_toBottomOf="@id/divider3"
        />

    <View
        android:id="@+id/divider3"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider" />

    <View
        android:id="@+id/divider4"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 2"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/divider3"
        app:layout_constraintBottom_toBottomOf="@id/divider4"
        />

    <TextView
        android:id="@+id/textScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/divider3"
        app:layout_constraintBottom_toBottomOf="@id/divider4"
        />

    <View
    android:id="@+id/divider5"
    android:layout_width="200dp"
    android:layout_height="1dp"
    android:layout_marginTop="30dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/divider4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 3"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/divider4"
        app:layout_constraintBottom_toBottomOf="@id/divider5"
        />

    <TextView
        android:id="@+id/textScore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/divider4"
        app:layout_constraintBottom_toBottomOf="@id/divider5"
        />

    <View
        android:id="@+id/divider6"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 4"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/divider5"
        app:layout_constraintBottom_toBottomOf="@id/divider6"
        />

    <TextView
        android:id="@+id/textScore4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/divider5"
        app:layout_constraintBottom_toBottomOf="@id/divider6"
        />

    <TextView
        android:id="@+id/textScoreTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/divider6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>