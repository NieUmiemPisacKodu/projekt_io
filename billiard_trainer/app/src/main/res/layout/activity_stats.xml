<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsActivity">

    <TextView
        android:id="@+id/textViewStatsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/sdivider"
        android:layout_width="1dp"
        android:layout_height="120dp"
        android:background="?android:attr/listDivider"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/sdivider2"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sdivider"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 1"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@id/sdivider"
        app:layout_constraintTop_toTopOf="@id/sdivider2"
        app:layout_constraintBottom_toBottomOf="@id/sdivider3"
        />

    <TextView
        android:id="@+id/stextScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/sdivider"
        app:layout_constraintTop_toTopOf="@id/sdivider2"
        app:layout_constraintBottom_toBottomOf="@id/sdivider3"
        />

    <View
        android:id="@+id/sdivider3"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sdivider" />

    <View
        android:id="@+id/sdivider4"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sdivider3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 2"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@id/sdivider"
        app:layout_constraintTop_toTopOf="@id/sdivider3"
        app:layout_constraintBottom_toBottomOf="@id/sdivider4"
        />

    <TextView
        android:id="@+id/stextScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/sdivider"
        app:layout_constraintTop_toTopOf="@id/sdivider3"
        app:layout_constraintBottom_toBottomOf="@id/sdivider4"
        />

    <View
        android:id="@+id/sdivider5"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sdivider4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 3"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@id/sdivider"
        app:layout_constraintTop_toTopOf="@id/sdivider4"
        app:layout_constraintBottom_toBottomOf="@id/sdivider5"
        />

    <TextView
        android:id="@+id/stextScore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/sdivider"
        app:layout_constraintTop_toTopOf="@id/sdivider4"
        app:layout_constraintBottom_toBottomOf="@id/sdivider5"
        />

    <View
        android:id="@+id/sdivider6"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sdivider5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 4"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@id/sdivider"
        app:layout_constraintTop_toTopOf="@id/sdivider5"
        app:layout_constraintBottom_toBottomOf="@id/sdivider6"
        />

    <TextView
        android:id="@+id/stextScore4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/sdivider"
        app:layout_constraintTop_toTopOf="@id/sdivider5"
        app:layout_constraintBottom_toBottomOf="@id/sdivider6"
        />

    <TextView
        android:id="@+id/stextScoreTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your average score for each exercise"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/sdivider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>